<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebApiCA2MobileApp.LandingPage"
             Title="Tipsolut"

             >
    
    <VerticalStackLayout>
       
      <!--<Image Source="colorful.jpg" Margin="10" Opacity=".7" />. -->
        <Label 
            
            Padding="30"
            Margin="20"
            BackgroundColor="Orange"
            FontAttributes="Bold"
            FontSize="Large"
            Text="Welcome to TIPSOLUT"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
  
        <Button Text="Login" Clicked="Login_Clicked" Margin="40" Padding="10" WidthRequest="100" />

        <Button Text="Register" Clicked="Register_Clicked" Margin="10" Padding="10" WidthRequest="100"/>   
    </VerticalStackLayout>
